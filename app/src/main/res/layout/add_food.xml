<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавление еды в ресторан"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/newBlack"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название еды"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/newBlack"
                />
            <EditText
                android:id="@+id/nameOfFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Состав еды"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/newBlack"
                />
            <EditText
                android:id="@+id/compOfFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Цена еды"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/newBlack"
                />
            <EditText
                android:id="@+id/priceOfFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вес еды"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/newBlack"
                />
            <EditText
                android:id="@+id/weightOfFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Категория еды"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/newBlack"
                />
            <EditText
                android:id="@+id/catOfFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Фото еды"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/newBlack"
                />

            <ImageView
                android:id="@+id/photoFood"
                android:layout_marginTop="5dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/food_def"/>

            <Button
                android:id="@+id/btnPhotoOfFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_sign_in"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="Выберите фото"/>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>